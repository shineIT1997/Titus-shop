{% extends  'layout.njk' %}

{% block sidebar %}
  {% include 'partials/sidebar/sidebar.njk' %}
{% endblock %}

{% block style %}
  <style>
    .categoryImage {
      height: 60px;
    }

    td {
      vertical-align: baseline;
      padding: 8px 0 !important;
    }
  </style>
{% endblock %}

{% block content %}
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-2 pb-2 mb-3 border-bottom">
    <h1 class="h2">Danh sách Dòng</h1>
  </div>

  <div class="table-responsive p-2 bg-light border rounded-3">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Mã dòng</th>
          <th scope="col">Tên dòng</th>
          <th scope="col">Hình ảnh đại diện</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {% for category in categoryData %}
          <tr>
            <td>{{category.cateId}}</td>
            <td>{{category.name}}</td>
            <td>
              <img class="categoryImage" src={{category.imagePath}}>
            </td>
            <td>
              <a style="color: red;" href={{"/category/" + category._id + "/delete.html"}}>Xoá</a> 
              <span style="margin: 0px 16px;">|</span>
              <a href={{"/category/" + category._id + "/update.html"}}>Sửa</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td class="text-center" colspan="4">Danh sách rỗng</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}

{% block footer %}
  <script language="JavaScript">

    document.querySelector("#category-collapse").classList = "collapse show"
    document.querySelector('button[data-bs-target="#category-collapse"]').classList = "btn btn-toggle align-items-center rounded collapsed activeNav"

  </script>
{% endblock %}