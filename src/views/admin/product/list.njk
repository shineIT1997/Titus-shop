{% extends  'layout.njk' %}

{% block sidebar %}
  {% include 'partials/sidebar/sidebar.njk' %}
{% endblock %}

{% block style %}
  <style>
    .productImage {
      height: 60px;
    }

    td {
      vertical-align: baseline;
      padding: 8px 0 !important;
    }

    img {
      height: 150px;
    }
  </style>
{% endblock %}

{% block content %}
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-2 pb-2 mb-3 border-bottom">
    <h1 class="h2">Danh sách nhà cung cấp</h1>
  </div>

  <div class="table-responsive p-3 bg-light border rounded-3">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Tên sản phẩm</th>
          <th scope="col">Nhà cung Cấp</th>
          <th scope="col">banner</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {% for product in productData %}
          <tr>
            <td>{{product.title}}</td>
            <td>{{product.supplierName}}</td>
            <td style="max-width: 200px;">
              {% for path in product.imagePath %}
                <img class="productImage" src="{{path}}">
              {% endfor %}
            </td>
            <td>
              <a style="color: red;" href={{"/product/" + product._id + "/delete.html"}}>Xoá</a> | 
              <a href={{"/product/" + product._id + "/update.html"}}>Sửa</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td class="text-center" colspan="4">Danh sách rỗng</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}

{% block footer %}
  <script language="JavaScript">
    document.querySelector("#product-collapse").classList = "collapse show"
    document.querySelector('button[data-bs-target="#product-collapse"]').classList = "btn btn-toggle align-items-center rounded collapsed activeNav"
    
  </script>
{% endblock %}